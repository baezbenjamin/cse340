<!-- Content Heading -->
<% if (title) { %>
<h1> <%= title %> </h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message Block -->
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error=> { %>
   <li><%= error.msg %></li>
<% }) %>
  </ul>
<% } %>

<!-- Form Display -->

<form action="/account/register" method="post">
    <label for="account_firstname">First name:</label><br>
    <input type="text" name="account_firstname" id="account_firstname" required><br>
    <label for="account_lastname">Last name:</label><br>
    <input type="text" name="account_lastname" id="account_lastname" required><br>
    <label for="account_email">Email Address:</label><br>
    <input type="email" name="account_email" id="account_email" required placeholder="Enter a valid email address"><br>
    <label for="account_password">Password:</label><br>
    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
    <input type="password" name="account_password" id="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required><br>
    <input class="register-button" type="submit" value="Register">
</form>